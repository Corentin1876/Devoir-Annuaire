{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<h1>Connexion</h1>

{% if error %}
    <div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form method="post">
    <div>
        <label for="username">Email:</label>
        <input type="email" id="username" name="_username" value="{{ last_username }}" required>
    </div>

    <div>
        <label for="password">Mot de passe:</label>
        <input type="password" id="password" name="_password" required>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn" type="submit">Connexion</button>
</form>

<p>Pas encore de compte? <a href="{{ path('app_register') }}">S'inscrire</a></p>
{% endblock %}
