{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<h1>Inscription</h1>

{{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.prenom) }}
    {{ form_row(form.password) }}
    <button class="btn" type="submit">S'inscrire</button>
{{ form_end(form) }}

<p>Déjà un compte? <a href="{{ path('app_login') }}">Se connecter</a></p>
{% endblock %}
