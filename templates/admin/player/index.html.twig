{% extends 'base.html.twig' %}

{% block title %}Gestion des Joueurs{% endblock %}

{% block body %}
<h1>Gestion des Joueurs</h1>

<a href="{{ path('admin_player_new') }}" class="btn">Nouveau joueur</a>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Catégorie</th>
            <th>Niveau</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for player in players %}
        <tr>
            <td>{{ player.id }}</td>
            <td>{{ player.nom }}</td>
            <td>{{ player.prenom }}</td>
            <td>{{ player.category ? player.category.nom : '-' }}</td>
            <td>{{ player.level ? player.level.nom : '-' }}</td>
            <td>
                <a href="{{ path('admin_player_edit', {id: player.id}) }}">Modifier</a>
                <form method="post" action="{{ path('admin_player_delete', {id: player.id}) }}" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.id) }}">
                    <button type="submit" onclick="return confirm('Confirmer la suppression?')">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">Aucun joueur</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
