{% extends 'base.html.twig' %}

{% block title %}Gestion des Catégories{% endblock %}

{% block body %}
<h1>Gestion des Catégories</h1>

<a href="{{ path('admin_category_new') }}" class="btn">Nouvelle catégorie</a>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.nom }}</td>
            <td>
                <a href="{{ path('admin_category_edit', {id: category.id}) }}">Modifier</a>
                <form method="post" action="{{ path('admin_category_delete', {id: category.id}) }}" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                    <button type="submit" onclick="return confirm('Confirmer la suppression?')">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">Aucune catégorie</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
